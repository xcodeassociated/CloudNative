<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="console">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
        <RollingFile name="file" fileName="logs/application.log"
                     filePattern="logs/application-%d{MM-dd-yyyy}-%i.log">
            <PatternLayout>
                <Pattern>%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="5 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="2000"/>
        </RollingFile>
        <Socket name="socket" host="host.docker.internal" port="9100" reconnectionDelayMillis="5000">
            <PatternLayout pattern="service=(gateway-service) logdate=(%d{ISO8601}) thread=(%thread)) level=(%level) loggerclass=(%logger{36}) message=(%msg)%n"/>
        </Socket>
    </Appenders>

    <Loggers>
        <Root level="WARN">
            <AppenderRef ref="console"/>
            <AppenderRef ref="socket"/>
            <AppenderRef ref="file"/>
        </Root>
        <!-- PROJECT -->
        <logger name="com.xcodeassociated.cloud" level="TRACE" additivity="false">
            <AppenderRef ref="console"/>
            <AppenderRef ref="socket"/>
            <AppenderRef ref="file"/>
        </logger>
        <!-- FRAMEWORKS -->
        <logger name="org.springframework" level="INFO" additivity="false">
            <AppenderRef ref="console"/>
            <AppenderRef ref="socket"/>
            <AppenderRef ref="file"/>
        </logger>
        <logger name="org.springframework.cloud" level="INFO" additivity="false">
            <AppenderRef ref="console"/>
            <AppenderRef ref="socket"/>
            <AppenderRef ref="file"/>
        </logger>
        <logger name="org.springframework.security" level="DEBUG" additivity="false">
            <AppenderRef ref="console"/>
            <AppenderRef ref="socket"/>
            <AppenderRef ref="file"/>
        </logger>
        <logger name="io.netty" level="INFO" additivity="false">
            <AppenderRef ref="console"/>
        </logger>
        <logger name="org.apache" level="INFO" additivity="false">
            <AppenderRef ref="console"/>
        </logger>
        <logger name="org.hibernate" level="INFO" additivity="false">
            <AppenderRef ref="console"/>
        </logger>
    </Loggers>
</Configuration>
